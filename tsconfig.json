{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@/util": ["./util/*"],
      "@/engineBox": ["/components/common/engineBox/*"]
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "environment.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "util/preparePageListData.js",
    "pages/api/auth/[...nextauth].js"
  ],
  "exclude": ["node_modules", ".next"]
}
